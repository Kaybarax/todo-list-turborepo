{
  "name": "todo-list-monorepo",
  "version": "2.1.0",
  "description": "A modern TODO list monorepo with Next.js, NestJS, React Native, and blockchain integration",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "./scripts/build.sh",
    "build:quick": "./scripts/build-quick.sh",
    "build:production": "./scripts/build-production.sh",
    "build:contracts": "./scripts/build-contracts.sh",
    "build:packages": "turbo run build --filter=\"./packages/*\"",
    "test:packages": "./scripts/test-package-installation.sh",
    "build:apps": "turbo run build --filter=\"./apps/*\"",
    "dev": "./scripts/startDev.sh",
    "dev:all": "./scripts/startDev.sh --services all",
    "dev:frontend": "./scripts/dev-frontend.sh",
    "dev:backend": "./scripts/dev-backend.sh",
    "dev:blockchain": "./scripts/dev-blockchain.sh",
    "dev:web": "./scripts/dev-services.sh web",
    "dev:api": "./scripts/dev-services.sh api",
    "dev:mobile": "./scripts/dev-services.sh mobile",
    "dev:ingestion": "./scripts/dev-services.sh ingestion",
    "dev:contracts": "./scripts/dev-services.sh contracts",
    "dev:storybook:web": "./scripts/dev-services.sh storybook-web",
    "dev:storybook:mobile": "./scripts/dev-services.sh storybook-mobile",
    "storybook:web": "pnpm --filter @todo/ui-web storybook",
    "storybook:mobile": "pnpm --filter @todo/ui-mobile storybook",
    "storybook:build:web": "pnpm --filter @todo/ui-web build-storybook",
    "storybook:build:mobile": "pnpm --filter @todo/ui-mobile build-storybook",
    "tokens:build": "pnpm --filter @todo/ui-web tokens:build",
    "tokens:watch": "pnpm --filter @todo/ui-web tokens:watch",
    "tokens:validate": "pnpm --filter @todo/ui-web tokens:validate",
    "design-system:build": "pnpm tokens:build && pnpm storybook:build:web",
    "design-system:test": "pnpm --filter @todo/ui-web test:visual",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:integration:blockchain": "jest --config=test/integration/jest.config.js --testPathPattern=blockchain-expansion-integration",
    "test:integration:web": "jest --config=test/integration/jest.config.js --testPathPattern=web-blockchain-integration",
    "test:integration:mobile": "jest --config=test/integration/jest.config.js --testPathPattern=mobile-blockchain-integration",
    "test:integration:all": "jest --config=test/integration/jest.config.js",
    "test:e2e": "turbo run test:e2e",
    "test:contracts": "./scripts/build-contracts.sh --network all",
    "test:deps": "./test/dependency-management/run-tests.sh",
    "test:deps:unit": "./test/dependency-management/run-tests.sh --unit",
    "test:deps:integration": "./test/dependency-management/run-tests.sh --integration",
    "test:deps:cross-platform": "./test/dependency-management/run-tests.sh --cross-platform",
    "test:deps:error-handling": "./test/dependency-management/run-tests.sh --error-handling",
    "test:deps:coverage": "./test/dependency-management/run-tests.sh --coverage",
    "format": "prettier --write \"**/*.{js,json,yml,cjs,mjs,ts,tsx,md,sol}\"",
    "format:check": "prettier --check \"**/*.{js,json,yml,cjs,mjs,ts,tsx,md,sol}\"",
    "clean": "turbo run clean && rm -rf build/ && rm -rf dist/",
    "clean:docker": "docker system prune -f && docker image prune -f",
    "typecheck": "turbo run typecheck",
    "quality": "pnpm lint && pnpm typecheck",
    "quality:fix": "pnpm lint:fix && pnpm typecheck",
    "contracts:compile": "./scripts/build-contracts.sh --skip-tests --check-deps",
    "contracts:test": "./scripts/build-contracts.sh --network all --check-deps",
    "contracts:deploy": "echo 'Contract deployment would run here'",
    "contracts:polygon": "./scripts/build-contracts.sh --network polygon --check-deps",
    "contracts:solana": "./scripts/build-contracts.sh --network solana --check-deps",
    "contracts:polkadot": "./scripts/build-contracts.sh --network polkadot --check-deps",
    "contracts:moonbeam": "./scripts/build-contracts.sh --network moonbeam --check-deps",
    "contracts:base": "./scripts/build-contracts.sh --network base --check-deps",
    "db:setup": "node db/setup.js",
    "db:migrate": "node db/migrate.js up",
    "db:seed": "node db/seed-todos.js",
    "db:reset": "node db/setup.js reset",
    "docker:build": "./scripts/build.sh --environment development",
    "docker:build:prod": "./scripts/build-production.sh",
    "docker:clean": "docker system prune -af",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy-development.sh",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:contracts": "./scripts/deploy-contracts.sh",
    "deploy:k8s": "./scripts/deploy.sh --environment production",
    "deploy:docker": "./scripts/deploy.sh --docker-compose",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "./scripts/build-production.sh && changeset publish",
    "validate-packages": "./scripts/validate-packages.sh",
    "verify-dependencies": "./scripts/verify-dependencies.sh",
    "verify-dependencies:install": "./scripts/verify-dependencies.sh --install",
    "verify-dependencies:test": "./scripts/verify-dependencies.sh --test-builds",
    "blockchain:deps:check": "./scripts/blockchain-deps-check.sh",
    "blockchain:deps:check:verbose": "./scripts/blockchain-deps-check.sh --verbose",
    "blockchain:deps:check:polygon": "./scripts/blockchain-deps-check.sh --network=polygon",
    "blockchain:deps:check:solana": "./scripts/blockchain-deps-check.sh --network=solana",
    "blockchain:deps:check:polkadot": "./scripts/blockchain-deps-check.sh --network=polkadot",
    "blockchain:deps:fix": "./scripts/blockchain-deps-check.sh --fix",
    "blockchain:deps:fix:interactive": "./scripts/blockchain-deps-check.sh --fix --interactive",
    "blockchain:deps:diagnose": "./scripts/blockchain-deps-check.sh --diagnose",
    "blockchain:tools:install": "./scripts/install-blockchain-tools.sh",
    "blockchain:tools:install:rust": "./scripts/install-blockchain-tools.sh --tool=rust",
    "blockchain:tools:install:solana": "./scripts/install-blockchain-tools.sh --tool=solana",
    "blockchain:tools:install:anchor": "./scripts/install-blockchain-tools.sh --tool=anchor",
    "blockchain:tools:install:substrate": "./scripts/install-blockchain-tools.sh --tool=substrate",
    "blockchain:tools:install:interactive": "./scripts/install-blockchain-tools.sh --interactive",
    "blockchain:help": "./scripts/blockchain-help.sh",
    "blockchain:help:interactive": "./scripts/interactive-help.sh",
    "publish-packages": "./scripts/publish-packages.sh",
    "publish-packages:dry-run": "./scripts/publish-packages.sh --dry-run"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.98.4",
    "hardhat": "^3.0.0",
    "ethers": "^6.15.0"
  },
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=9.0.0"
  }
}

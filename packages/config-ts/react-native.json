{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Native",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@todo/*": ["../../packages/*/src"]
    }
  },
  "include": ["src/**/*", "app/**/*", "index.js", "app.config.js", "babel.config.js", "metro.config.js"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "dist", "coverage"]
}

{
  "name": "@todo/ui-mobile",
  "version": "0.1.0",
  "description": "React Native component library for the Todo app",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:lib": "vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --project tsconfig.dev.json --noEmit",
    "lint": "eslint \"lib/**/*.{ts,tsx}\" --ignore-pattern \"**/*.d.ts\" --ignore-pattern \"**/*.map\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=${CHROMATIC_PROJECT_TOKEN}",
    "showcase:start": "cd showcase && npm start",
    "showcase:build": "cd showcase && npm run build",
    "showcase:android": "cd showcase && npm run android",
    "showcase:ios": "cd showcase && npm run ios",
    "showcase:web": "cd showcase && npm run web",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@eva-design/eva": "^2.2.0",
    "@todo/services": "workspace:*",
    "@ui-kitten/components": "^5.3.1",
    "react-native-svg": "^13.4.0",
    "react-native-vector-icons": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@react-native-community/eslint-config": "^3.2.0",
    "@storybook/addon-a11y": "^9.0.0-alpha.10",
    "@storybook/addon-essentials": "^9.0.0-alpha.10",
    "@storybook/addon-interactions": "^9.0.0-alpha.10",
    "@storybook/addon-links": "^9.0.0-alpha.10",
    "@storybook/addon-onboarding": "^9.0.0-alpha.10",
    "@storybook/blocks": "^9.0.0-alpha.10",
    "@storybook/react": "^9.0.0-alpha.10",
    "@storybook/react-webpack5": "^9.0.0-alpha.10",
    "@storybook/test": "^8.6.14",
    "@testing-library/react-native": "^12.9.0",
    "@todo/config-eslint": "workspace:*",
    "@todo/config-ts": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.1.1",
    "@types/react-native": "~0.72.6",
    "@types/react-native-vector-icons": "^6.4.18",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-loader": "^9.1.3",
    "chromatic": "^10.0.0",
    "eslint": "^9.18.0",
    "jest": "^30.0.5",
    "jsdom": "^23.0.1",
    "react": "19.1.1",
    "react-native": "0.72.6",
    "react-test-renderer": "19.1.1",
    "storybook": "^9.0.0-alpha.10",
    "typescript": "^5.9.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-native": ">=0.70.0",
    "react-native-vector-icons": ">=10.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}

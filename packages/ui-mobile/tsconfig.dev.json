{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  // Typecheck library, stories, and tests in dev
  "include": ["lib/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "showcase", "__tests__"]
}

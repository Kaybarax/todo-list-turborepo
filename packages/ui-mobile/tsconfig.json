{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./lib",
    "declaration": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "composite": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "types": []
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "__tests__", "showcase", "**/*.test.ts", "**/*.stories.tsx"]
}

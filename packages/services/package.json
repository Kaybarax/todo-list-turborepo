{
  "name": "@todo/services",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --tsconfig tsconfig.build.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --ignore-pattern \"**/*.d.ts\" --ignore-pattern \"**/*.map\" --ignore-pattern \"**/__tests__/**\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --ignore-pattern \"**/*.d.ts\" --ignore-pattern \"**/*.map\" --ignore-pattern \"**/__tests__/**\" --fix",
    "test": "jest"
  },
  "devDependencies": {
    "@todo/config-eslint": "workspace:*",
    "@todo/config-jest": "workspace:*",
    "@todo/config-ts": "workspace:*",
    "@types/node": "^20.19.9",
    "eslint": "^9.18.0",
    "jest": "^30.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "date-fns": "^4.1.0",
    "zod": "^3.25.76",
    "ethers": "^6.8.1",
    "@solana/web3.js": "^1.98.4",
    "@polkadot/api": "^16.4.4",
    "@polkadot/util": "^13.2.3"
  }
}

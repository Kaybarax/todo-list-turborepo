{
  "name": "@todo/services",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --tsconfig tsconfig.build.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --ignore-pattern \"**/*.d.ts\" --ignore-pattern \"**/*.map\" --ignore-pattern \"**/__tests__/**\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --ignore-pattern \"**/*.d.ts\" --ignore-pattern \"**/*.map\" --ignore-pattern \"**/__tests__/**\" --fix",
    "test": "jest"
  },
  "devDependencies": {
    "@todo/config-eslint": "workspace:*",
    "@todo/config-jest": "workspace:*",
    "@todo/config-ts": "workspace:*",
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "zod": "^3.22.4",
    "ethers": "^6.8.1",
    "@solana/web3.js": "^1.87.6",
    "@polkadot/api": "^10.11.2",
    "@polkadot/util": "^12.6.2"
  }
}

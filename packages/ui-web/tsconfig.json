{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./lib",
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["lib", "__tests__", ".storybook/**/*"],
  "exclude": ["node_modules", "dist"]
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["jest", "@testing-library/jest-dom", "vitest/globals"],
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["lib/**/*", "__tests__/**/*", ".storybook/**/*", "showcase/**/*"],
  "exclude": ["node_modules", "dist"]
}

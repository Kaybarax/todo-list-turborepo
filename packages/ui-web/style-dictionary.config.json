{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "dist/tokens/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "dist/tokens/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/es6"
        }
      ]
    },
    "tailwind": {
      "transformGroup": "js",
      "buildPath": "dist/tokens/",
      "files": [
        {
          "destination": "tailwind-tokens.js",
          "format": "javascript/object"
        }
      ]
    }
  }
}

{
  "name": "@todo/ui-web",
  "version": "0.1.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./todo": {
      "types": "./dist/components/todo/index.d.ts",
      "import": "./dist/components/todo/index.js",
      "require": "./dist/components/todo/index.cjs"
    },
    "./blockchain": {
      "types": "./dist/components/blockchain/index.d.ts",
      "import": "./dist/components/blockchain/index.js",
      "require": "./dist/components/blockchain/index.cjs"
    },
    "./styles.css": "./dist/style.css"
  },
  "scripts": {
    "tokens:build": "node scripts/build-tokens.cjs",
    "tokens:watch": "nodemon --watch tokens --exec \"node scripts/build-tokens.cjs\"",
    "prebuild": "npm run tokens:build",
    "build": "vite build",
    "dev": "concurrently \"npm run tokens:watch\" \"vite build --watch\"",
    "test": "vitest --config vitest.config.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:visual": "test-storybook",
    "chromatic": "chromatic --exit-zero-on-changes",
    "storybook": "npm run tokens:build && storybook dev -p 6006",
    "build-storybook": "npm run tokens:build && storybook build",
    "test-storybook": "test-storybook",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "bundle-analyze": "vite build --config bundle-analyzer.config.js",
    "size-check": "bundlesize",
    "visual-test": "npm run build-storybook && npm run chromatic",
    "visual-test:ci": "npm run build-storybook && npm run chromatic:ci",
    "showcase:dev": "vite --config showcase/vite.config.ts",
    "showcase:build": "vite build --config showcase/vite.config.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@todo/services": "workspace:*",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "daisyui": "^5.0.50",
    "lucide-react": "^0.540.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^2.0.2",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-backgrounds": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/addon-viewport": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.1.0",
    "@todo/config-eslint": "workspace:*",
    "@todo/config-ts": "workspace:*",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "chromatic": "^13.1.3",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "jest-image-snapshot": "^6.4.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.32",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "storybook": "^8.6.14",
    "style-dictionary": "^5.0.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}

# Database Configuration Environment Variables
# Copy this file to .env.development for local development

# MongoDB connection (development)
MONGODB_URI=mongodb://admin:password@localhost:27017/todo-app?authSource=admin
MONGODB_DATABASE=todo-app

# MongoDB connection (production - update with actual values)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/todo-app?retryWrites=true&w=majority
# MONGODB_DATABASE=todo-app

# Migration configuration
MIGRATION_COLLECTION=migrations_changelog

# Redis configuration
REDIS_URI=redis://localhost:6379

# Application configuration
NODE_ENV=development
JWT_SECRET=dev-jwt-secret-change-in-production
API_PORT=3001

# Blockchain configuration
POLYGON_RPC_URL=http://localhost:8545
SOLANA_RPC_URL=http://localhost:8899
POLKADOT_RPC_URL=ws://localhost:9944

{
  "extends": "@todo/config-ts/nestjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["src/*"],
      "@todo/*": ["../../packages/*/src"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/services" }]
}

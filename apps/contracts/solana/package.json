{
  "name": "@todo/solana-contracts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "deploy:localnet": "anchor deploy --provider.cluster localnet && ts-node scripts/deploy-localnet.ts",

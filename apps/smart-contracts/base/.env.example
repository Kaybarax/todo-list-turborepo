# Base Network Configuration

# Private key for deployment (without 0x prefix)
BASE_PRIVATE_KEY=your_private_key_here
# Alternative: use the general PRIVATE_KEY if you prefer
PRIVATE_KEY=your_private_key_here

# Base Mainnet RPC URL
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia Testnet RPC URL
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Basescan API Key for contract verification
BASESCAN_API_KEY=your_basescan_api_key_here

# Gas reporting configuration
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Local development node (if running Base locally)
BASE_DEV_RPC_URL=http://localhost:8545
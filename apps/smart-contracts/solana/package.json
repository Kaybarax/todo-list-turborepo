{
  "name": "@todo/solana-blockchain",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "./build-final.sh",
  "test": "bash ./test.sh",
    "deploy:localnet": "anchor deploy --provider.cluster localnet && ts-node scripts/deploy-localnet.ts",
    "deploy:devnet": "anchor deploy --provider.cluster devnet && ts-node scripts/deploy-devnet.ts",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet && ts-node scripts/deploy-mainnet.ts",
    "generate-types": "anchor build && ts-node scripts/generate-types.ts",
    "client-example": "ts-node examples/client-integration.ts",
    "lint": "eslint . --ext .ts,.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.98.4",
    "@solana/spl-token": "^0.4.13"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.9.2"
  }
}
{
  "name": "@todo/polygon-blockchain",
  "version": "0.1.0",
  "private": true,

  "description": "Polygon smart contracts for todo management",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:mumbai": "npx hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "npx hardhat run scripts/deploy.js --network polygon",
    "verify:mumbai": "npx hardhat verify --network mumbai",
    "verify:polygon": "npx hardhat verify --network polygon",
    "node": "npx hardhat node",
    "coverage": "npx hardhat coverage",
    "size": "npx hardhat size-contracts",
    "lint": "solhint --config .solhint.json 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^4.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^5.3.1",
    "dotenv": "^17.2.1",
    "ethers": "^6.13.4",
    "hardhat": "^3.0.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.0",
    "solidity-coverage": "^0.8.14",
    "typechain": "^8.3.2"
  }
}
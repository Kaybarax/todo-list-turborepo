{
  "name": "@todo/moonbeam-blockchain",
  "version": "0.1.0",
  "private": true,
  "description": "Moonbeam smart contracts for todo management on Polkadot parachain",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:dev": "npx hardhat run scripts/deploy.js --network moonbeam_dev",
    "deploy:moonbase": "npx hardhat run scripts/deploy.js --network moonbase",
    "deploy:moonbeam": "npx hardhat run scripts/deploy.js --network moonbeam",
    "verify:moonbase": "npx hardhat verify --network moonbase",
    "verify:moonbeam": "npx hardhat verify --network moonbeam",
    "node": "npx hardhat node",
    "setup-dev-node": "node scripts/setup-dev-node.js --start",
    "setup-dev-config": "node scripts/setup-dev-node.js",
    "coverage": "npx hardhat coverage",
    "size": "npx hardhat size-contracts",
    "lint": "solhint --config .solhint.json 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "create-todo-list": "npx hardhat run scripts/create-todo-list.js",
    "create-sample-todos": "npx hardhat run scripts/create-sample-todos.js"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "hardhat": "^2.18.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.2",
    "@moonbeam-network/api-augment": "^0.2700.0",
    "@polkadot/api": "^10.11.2",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2"
  }
}
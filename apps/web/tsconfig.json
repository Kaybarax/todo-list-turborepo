{
  "extends": "@todo/config-ts/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["node", "react", "react-dom"],
    "paths": {
      "@/*": ["./src/*"],
      "@todo/*": ["../../packages/*/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "../api/node_modules", "../../node_modules/@types/hapi*"],
  "references": [{ "path": "../../packages/ui-web" }, { "path": "../../packages/services" }]
}

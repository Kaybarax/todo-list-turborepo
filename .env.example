# Environment variables
# Copy this file to .env and fill in your values

# Node environment
NODE_ENV=development

# Database connections
MONGODB_URI=mongodb://localhost:27017/todos
REDIS_URI=redis://localhost:6379
ELASTICSEARCH_URI=http://localhost:9200

# API configuration
API_URL=http://localhost:3000
PORT=3000

# Web configuration
WEB_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000

# Authentication
# Replace these with secure values in production
USER_EMAIL=user@example.com
USER_PASSWORD=YourSecurePassword

# Feature flags
FEATURE_NOTIFICATIONS=false
FEATURE_ANALYTICS=false

# Logging
LOG_LEVEL=info
DISABLE_LOGGING=false

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Blockchain Network Configuration
# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_TESTNET_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_PRIVATE_KEY=your-polygon-private-key
ETHERSCAN_API_KEY=your-etherscan-api-key

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com
SOLANA_PRIVATE_KEY=your-solana-private-key

# Polkadot
POLKADOT_RPC_URL=wss://rpc.polkadot.io
POLKADOT_TESTNET_RPC_URL=wss://westend-rpc.polkadot.io
POLKADOT_PRIVATE_KEY=your-polkadot-private-key

# Moonbeam
MOONBEAM_RPC_URL=https://rpc.api.moonbeam.network
MOONBEAM_TESTNET_RPC_URL=https://rpc.api.moonbase.moonbeam.network
MOONBEAM_PRIVATE_KEY=your-moonbeam-private-key
MOONBEAM_API_KEY=your-moonbeam-api-key

# Base
BASE_RPC_URL=https://mainnet.base.org
BASE_TESTNET_RPC_URL=https://sepolia.base.org
BASE_PRIVATE_KEY=your-base-private-key
BASESCAN_API_KEY=your-basescan-api-key

# Contract Addresses (will be populated after deployment)
POLYGON_TODO_CONTRACT_ADDRESS=
MOONBEAM_TODO_CONTRACT_ADDRESS=
BASE_TODO_CONTRACT_ADDRESS=
SOLANA_TODO_PROGRAM_ID=

{
  "enabled": true,
  "name": "Unit Test Runner",
  "description": "Automatically runs unit tests when source code files are modified to ensure all tests pass and maintain code quality",
  "version": "1",
  "when": {
    "type": "userTriggered",
    "patterns": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Source code files have been modified. Please run the unit tests to ensure all tests pass. Use the appropriate test command for the monorepo structure (likely `pnpm test` or `pnpm test:unit`). If any tests fail, analyze the failures and provide guidance on how to fix them. Focus on maintaining test coverage and code quality."
  }
}
{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**", "lib/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx"
      ]
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "e2e/**/*.ts", "tests/**/*.spec.ts"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "compile": {
      "dependsOn": ["^build"],
      "outputs": ["artifacts/**", "cache/**", "typechain-types/**", "target/**", "deployments/**"]
    },
    "compile:polygon": {
      "outputs": ["artifacts/**", "cache/**", "typechain-types/**"]
    },
    "compile:moonbeam": {
      "outputs": ["artifacts/**", "cache/**", "typechain-types/**"]
    },
    "compile:base": {
      "outputs": ["artifacts/**", "cache/**", "typechain-types/**"]
    },
    "compile:solana": {
      "outputs": ["target/**", "deployments/**"]
    },
    "compile:polkadot": {
      "outputs": ["target/**"]
    },
    "compile:all": {
      "dependsOn": ["compile:polygon", "compile:moonbeam", "compile:base", "compile:solana", "compile:polkadot"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    },
    "storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}
